{
  "compilerOptions": {
    "outDir": "lib",
    "alwaysStrict": true,
    "declaration": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "newLine": "lf",
    "lib": ["ES2020"],
    "typeRoots": ["./node_modules/@types", "src/@types"]
  }
}
